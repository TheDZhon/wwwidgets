DEFINES += WWWIDGETS
DEFINES -= NO_WWWIDGETS

isEmpty(WWIDGETS_PATH) {
	WWIDGETS_PATH = $$(WWIDGETS_PATH)
}

isEmpty(WWIDGETS_PATH) {
	INCLUDEPATH += $$[QT_INSTALL_HEADERS]/wwWidgets
} else {
	INCLUDEPATH += $${WWIDGETS_PATH}/include/wwWidgets
	LIBS += -L$${WWIDGETS_PATH}/lib
}

greaterThan(QT_MAJOR_VERSION, 4) {
	LIBS += -lwwwidgets$$QT_MAJOR_VERSION
} else {
	qtAddLibrary(wwwidgets$$QT_MAJOR_VERSION)
}

WW_VERSION = 1.0.0

